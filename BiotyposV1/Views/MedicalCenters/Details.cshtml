@model BiotyposV1.Models.MedicalCenter

@{
    ViewBag.Title = Model.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="jumbotron">
    <h2>@Model.Name</h2>
    <h4>Διέυθυνση: @Model.Street @Model.StreetNumber, @Model.Region, @Model.City</h4>
    <h4>
        Τηλέφωνα:
        @{
            var phones = "  ";
            foreach (var temp in Model.MedicalCenterPhone)
            {
                if (temp.MedicalCenterRefId == Model.Id)
                {
                    phones += temp.Number + ", ";
                }
            }
            phones = phones.Remove(phones.Length-2);
        }
        @phones
    </h4>
</div>